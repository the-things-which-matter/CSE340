<h1>
    <%= title %>
</h1>

<!-- Greet the user based on account type -->
<% if (accountType==='Client' ) { %>
    <h2>Welcome <%= firstname %>
    </h2>
    <% } else { %>
        <h2>Welcome <%= firstname %>
        </h2>
        <% } %>

            <p>Welcome, <%= firstname %>
                    <%= lastname %>!</p>
            <p>Email: <%= email %>
            </p>
            <p>Account Type: <%= accountType %>
            </p>

          
            <p><a href="/account/update/<%= account_id %>">Update Account Information</a></p>

            <!-- Show inventory section only for Admin/Employee -->
            <% if (accountType==='Admin' || accountType==='Employee' ) { %>
                <h3>Inventory Management</h3>
                <p><a href="/inv/">Manage Inventory</a></p>
                <% } %>

                    <!-- Logout link -->
                    <p><a href="/account/logout">Logout</a></p>