<% if (errorMessage) { %>
    <div class="notice">
        <%= errorMessage %>
    </div>
    <% } %>

        <h1 class="update">
            <%= title %>
        </h1>

        <div class="form-container">

            <h2>Update Account Information</h2>
            <form action="/account/update" method="post">
                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="firstname" required
                    value="<%= account && account.account_firstname ? account.account_firstname : '' %>" />

                <label for="lastname">Last Name</label>
                <input type="text" id="lastname" name="lastname" required
                    value="<%= account && account.account_lastname ? account.account_lastname : '' %>" />

                <label for="email">Email</label>
                <input type="email" id="email" name="email" required
                    value="<%= account && account.account_email ? account.account_email : '' %>" />

                <input type="hidden" name="account_id"
                    value="<%= account && account.account_id ? account.account_id : '' %>" />

                <button type="submit">Update Information</button>
            </form>

            <h2>Change Password</h2>
            <form action="/account/update-password" method="post">
                <label for="new_password">New Password</label>
                <input type="password" id="new_password" name="new_password" required
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{8,}$"
                    title="Must be at least 8 characters and include uppercase, lowercase, number, and special character." />

                <input type="hidden" name="account_id"
                    value="<%= account && account.account_id ? account.account_id : '' %>" />

                <button type="submit">Change Password</button>
            </form>

            </div>